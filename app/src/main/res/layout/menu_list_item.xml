<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_menu_list_item"
    android:layout_marginTop="@dimen/ccommon_padding"
    android:layout_marginLeft="@dimen/ccommon_padding"
    android:layout_marginRight="@dimen/ccommon_padding"
    android:background="@color/whiteBackgroundColor"
    android:gravity="center"
    android:id="@+id/menu_list_item_latout">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/menu_iv"
        tools:src="@drawable/brownies"
        android:scaleType="centerCrop"
        android:layout_marginRight="@dimen/padding_16"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="2">

        <TextView
            android:id="@+id/menu_name_tv"
            style="@style/TextAppearance.AppCompat.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            tools:text="@string/test_text_view" />

        <TextView
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="monospace"
            android:textColor="@color/black"
            android:id="@+id/servings_tv"
            tools:text="@string/test_2_text_view"/>
    </LinearLayout>

</LinearLayout>
